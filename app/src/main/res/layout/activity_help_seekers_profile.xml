<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    tools:context="com.example.helpme.everything.HelpSeekersProfile_activity">
    <include layout="@layout/toolbar_seekers_profile"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar_helpSeekerprofileView"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="#FF1744"
            android:indeterminateTintMode="src_atop" />

        <LinearLayout
            android:id="@+id/helpSeekerProfileView_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileUserpicHS"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:layout_margin="15dp"
                android:src="@drawable/userprofile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profileUsernameHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_username"
                    android:fontFamily="@font/roboto"
                    android:text="User Name: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profileFullNameHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_fullname"
                    android:fontFamily="@font/roboto"
                    android:text="Full Name: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profileEmailHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="User Email: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profilePhoneHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="Phone No: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profileAddressHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_home_address"
                    android:fontFamily="@font/roboto"
                    android:text="Address: "
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>