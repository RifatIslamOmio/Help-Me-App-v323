<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/custom"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="3.5dp"
                android:fontFamily="@font/roboto"
                android:text="Date"
                android:textColor="#00E676"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/counterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_notvoted"
                android:drawablePadding="3dp"
                android:fontFamily="@font/roboto"
                android:layout_alignParentEnd="true"
                android:text="10"
                android:textColor="#FF1744"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Time"
            android:textColor="#00E676"
            android:textSize="15sp"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_circular_clock"
            >
        </TextView>

        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Location"
            android:textColor="#00E676"
            android:textSize="15sp"
            android:drawablePadding="3.5dp"
            android:drawableLeft="@drawable/ic_map"
             />

        <TextView
            android:id="@+id/seekerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/roboto_bold"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_username"
            android:text="Seeker's Name"
            android:textColor="#F44336"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/description_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Description"
            android:textSize="18sp">

        </TextView>

        <ImageView
            android:id="@+id/imageViewHelpFeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/loading" />

    </LinearLayout>


</LinearLayout>