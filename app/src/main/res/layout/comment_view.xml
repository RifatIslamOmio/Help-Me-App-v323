<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:id="@+id/itemOfRecyclerView"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/custom_comment"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="5dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/CommentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Commenter's Name"
                android:textColor="#F44336"
                android:textSize="19sp">
            </TextView>

            <TextView
                android:id="@+id/CommentVotecounter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_liked"
                android:drawablePadding="2dp"
                android:fontFamily="@font/roboto"
                android:text="10"
                android:textColor="#2979FF"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Comment_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/roboto"
            android:text="Comment"
            android:textSize="16sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CommentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="Time"
                android:textColor="#00E676"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/CommentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="Date"
                android:textColor="#00E676"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>